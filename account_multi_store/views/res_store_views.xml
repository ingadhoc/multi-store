<?xml version="1.0"?>
<odoo>
    <!-- Form -->
    <record id="view_res_store_form" model="ir.ui.view">
        <field name="name">res.store.form</field>
        <field name="model">res.store</field>
        <field name="inherit_id" ref="base_multi_store.view_res_store_form"/>
        <field name="arch" type="xml">
            <div name="button_box">
                <button
                    class="oe_inline oe_stat_button"
                    name="%(account.action_account_journal_form)d"
                    type="action"
                    context="{'search_default_store_id': active_id}"
                    icon="fa-money">
                    <field name="journals_count" widget="statinfo"/>
                </button>
            </div>
            <group name="col2">
                <field name="only_allow_reonciliaton_of_this_store"/>
                <field name="dont_compute_withholdings"/>
                <field name="currency_exchange_journal_id" domain="[('type', '=', 'general'), ('store_id', 'in', [id, False])]" required="only_allow_reonciliaton_of_this_store == True"/>
            </group>
            <notebook>
                <page string="Journals" name="journals">
                    <field name="journal_ids" widget="many2many" domain="[('store_id', '=', False)]"/>
                </page>
            </notebook>
        </field>
    </record>
</odoo>
